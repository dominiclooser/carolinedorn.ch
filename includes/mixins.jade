mixin logo
   a(href='/').logo 
      span= logo_1 
      span= logo_2

mixin navigation(logo=false)
   
   header.desktop-page-header
      if logo
         +logo
      nav.desktop-nav
         ul
            for item in nav
               li: a(href=item.link, class=current.path[0] == item.link ? 'current-link' : '')= item.title
      nav.desktop-subnav
         if current.path[0] in nav 
            if 'subnav' in nav[current.path[0]]
               ul
                  for item in nav[current.path[0]].subnav
                     li: a(href=item.link)= item.title

   header.mobile-page-header
      if logo
         +logo
      p.open-nav Menu
   
   nav.mobile-nav
      .close-wrapper
         svg.close(viewBox='0 0 100 100')
            line(x1=10, y1=10, x2=90, y2=90)
            line(x1=10, y1=90, x2=90, y2=10)
      ul.stacked-list
         for item in nav
            li.navgroup
               a(href=item.link, class='navitem')= item.title
               if item.subnav
                  ul.stacked-list.subnav
                     for subitem in item.subnav
                        a(href=subitem.link, class='navitem'): li= subitem.title