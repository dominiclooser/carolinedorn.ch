body
    min-height: 100%
    line-height: var(--line-height)

footer
    font-size: var(--s)
    padding: var(--semi-unit) 0
    border-top: 2px solid dark
    font-family: heading-font


////////////////
// typography //
////////////////

.h1, .h2, .h3
    font-family: heading-font
    line-height: heading-line-height

.h1
    font-family: heading-font
    font-size: var(--xxxl)
    @media big-mobile
        font-size: var(--xxxxl)
    @media big-heading
        font-size: var(--xxxxxxl)
    line-height: heading-line-height
    // text-transform: uppercase

.h2
    font-size: var(--xl)
    // text-transform: uppercase

p+.h2
    margin-top: var(--unit)

.h3
    font-size: var(--l)

.plustext-text
.textplus-text
    @extends .spaced-paragraphs
    h2
        @extends .h2
    h2+p
        margin-top: var(--semi-unit)

    p+h2
        margin-top: var(--unit)
    

////////////
// header //
////////////

.mobile-page-header
    @media desktop-nav
        display: none
    font-family: heading-font
    text-transform: uppercase
    padding: var(--semi-unit) 0 
    border-bottom: 2px solid dark
    display: flex
    justify-content: space-between

.mobile-nav
    display: none
    stacked-list(border: none, verticalpadding: 0px)
    position: fixed
    top: 0
    height: 100vh
    width: 100vw
    background: colors[0]
    z-index: 10
    left: 0
    font-family heading-font
    padding: var(--three-units) 0
    color: white
    .navgroup
        margin-bottom: calc((-0.7) * var(--unit))
    .navitem
        padding-left: var(--unit)
        line-height: 1
        font-size: var(--xxxxl)
        display: block
        &:hover
            background: white
            color: colors[0]
            li
                background: white
                color: colors[0]
    .subnav
        margin-top: 0.3em
        .navitem
            font-size: var(--xl)
            line-height: var(--semi-unit)
    .close-wrapper
        text-align: center
        margin-bottom: var(--two-units)
    .close
        stroke: white
        stroke-width: 8
        height: calc(1.5*var(--unit))
        cursor: pointer

.open-nav
    cursor: pointer
    
.hamburger
    height: var(--two-units)
    fill: none
    stroke-width: 0.5
    stroke: dark
    cursor: pointer

.logo
    font-family: heading-font
    text-transform: uppercase
    margin-right: var(--unit)
    color: colors[0]

.desktop-page-header
    @extends .color-on-hover-links
    letter-spacing: 0.05em
    border-bottom: 1px solid dark
    font-family: heading-font
    line-height: var(--unit)
    vertical-align: bottom 
    padding: var(--semi-unit) 0
    padding-bottom: var(--quarter-unit)
    @media mobile-nav
        display: none
    
.desktop-nav
    display: inline
    ul
        display: inline
        separated-list(separator: '•')
    li:hover
        color: colors[0]

.desktop-subnav
    font-size: var(--s)
    font-family: body-font
    ul
        separated-list(separator: '•')
    li:hover
        color: colors[0]

.page-heading
    margin-top: var(--three-units)
    margin-bottom: var(--two-units)

.page-title
    @extends .h1

.page-subtitle
    margin-top: var(--two-units)

.page-intro
    max-width: text-width
    margin-bottom: var(--unit)
    @extend .spaced-paragraphs
    section+section
        margin-top: var(--unit)
    h2
        margin-bottom: var(--semi-unit)
        @extend .h2
    ul 
        arrow-list()
    ul+p
        margin-top: var(--semi-unit) 

.poetic-short
    font-size: var(--xl)
    line-height: 1.3
    font-style: italic
    text-align: center

.performance-list
    stacked-list(border: 1px solid dark)

.performance-date
    word-spacing: -0.2em
    &::after
        content: ' / '
        margin-right: 0.5em

.performance-title
    display: inline
    font-size: var(--l)

.button
    font-family: body-font
    font-size: var(--m)
    background: inherit
    border: 1px solid dark
    border-radius: 0.2em
    padding: 0.2em 0.8em
    cursor: pointer
    &:hover
        background: dark
        color: light-background-color

///////////
// main ///
///////////

.page-main
    padding-bottom: var(--three-units)


///////////
// cards //
///////////

.colored-cards
    .card
        for i in (0..6)
            &:nth-child({6}n+{i})
                background: colors[i]

.card
    @extends .spaced-paragraphs
    .button-wrapper
        display: flex 
        padding-top: var(--unit)
    h2
        @extends .h2
        margin-top: var(--semi-unit)
        margin-bottom: calc(1.5 * var(--unit))
        a
            @extends .underline-on-hover
    figure, img
        margin-bottom: var(--unit)
    figcaption
        margin-top: calc((-0.8)*var(--unit))
        font-size: var(--xs)
    p > a
        @extends .arrow-link

    